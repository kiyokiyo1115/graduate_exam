<h3>出題年：<%= @exam.year %>年</h3>
<br><br>
<h3>分野名：<%= @exam.law %></h3>
<br><br>
<h3>問題：</h3>
<h3><%= @exam.question %></h3>          
<br><br>
          
<div id="output"></div>
<br><br>
<script language="javascript" type="text/javascript">
  function OnButtonClick() {
    target = document.getElementById("output");
    target.innerHTML = "<h3>解答：</h3><h3><%= @exam.answer %></h3>";
  }
  
</script>
<input type="button" value="解答を見る" onclick="OnButtonClick();"/><br />
<br />

